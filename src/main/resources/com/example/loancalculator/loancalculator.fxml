<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="282.0" prefWidth="285.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <Label fx:id="loanCalculatorLabel" text="Loan Calculator" textAlignment="CENTER">
      <opaqueInsets>
         <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
      </opaqueInsets>
      <font>
         <Font size="35.0" />
      </font>
   </Label>
   <HBox prefHeight="30.0" prefWidth="414.0">
      <Label fx:id="interestRateLabel" prefHeight="17.0" prefWidth="100.0" text="Interest Rate" />
      <TextField fx:id="interestRateTextField">
         <opaqueInsets>
            <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
         </opaqueInsets>
      </TextField>
   </HBox>
   <HBox prefHeight="30.0" prefWidth="414.0">
      <Label fx:id="loanTermLabel" prefHeight="17.0" prefWidth="100.0" text="Loan Term" />
      <TextField fx:id="loanTermTextField">
         <opaqueInsets>
            <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
         </opaqueInsets>
      </TextField>
   </HBox>
   <HBox prefHeight="30.0" prefWidth="414.0">
      <Label fx:id="loanAmountLabel" prefHeight="17.0" prefWidth="100.0" text="Loan Amount" />
      <TextField fx:id="loanAmountTextField">
         <opaqueInsets>
            <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
         </opaqueInsets>
      </TextField>
   </HBox>
   <HBox fx:id="monthlyPaymentLabel" prefHeight="30.0" prefWidth="414.0">
      <Label prefHeight="17.0" prefWidth="100.0" text="Monthly Payment" />
      <TextField fx:id="monthlyPaymentTextField">
         <opaqueInsets>
            <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
         </opaqueInsets>
      </TextField>
   </HBox>
   <HBox prefHeight="30.0" prefWidth="414.0">
      <Label fx:id="totalPaymentLabel" prefHeight="17.0" prefWidth="100.0" text="Total Payment" />
      <TextField fx:id="totalPaymentTextField">
         <opaqueInsets>
            <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
         </opaqueInsets>
      </TextField>
   </HBox>
   <Button fx:id="calculateButton" mnemonicParsing="false" onAction="#calculateButtonClick" text="Calculate" textAlignment="CENTER" />
</VBox>
